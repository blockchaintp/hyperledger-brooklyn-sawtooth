brooklyn.catalog:
  version: "0.5.0-SNAPSHOT" # BROOKLYN_HYPERLEDGER_SAWTOOTH_VERSION
  itemType: entity
  brooklyn.libraries:
    - url: "mvn:io.brooklyn.hyperledger/sawtooth/0.5.0-SNAPSHOT" # BROOKLYN_HYPERLEDGER_SAWTOOTH_VERSION
      name: io.brooklyn.hyperledger.sawtooth
      version: 0.5.0-SNAPSHOT # BROOKLYN_HYPERLEDGER_SAWTOOTH_VERSION

  items:
    - "https://raw.githubusercontent.com/brooklyncentral/common-catalog-utils/master/common-tests/src/main/resources/commontests/common.tests.bom"
    - id: hyperledger-multinode-sawtooth-tests
      type: entity
      item:
        name: "hyperledger-sawtooth-multinode-network"
        description: |
          Hyperledger Sawtooth blockchain network in a single Amazon region.

        services:
          - type: sawtooth-cluster-application
            id: hyperledger-sawtooth-cluster
            name: "hyperledger-sawtooth-cluster"

            brooklyn.config:
              sawtooth.version: "1.0.3"
              sawtooth.repository: "blockchaintp"
              sawtooth.size: 3
              sawtooth.network: "blockchaintp.local"
              sawtooth.network.cidr: "10.10.10.0/24"
              sawtooth.network.gw: "10.10.10.1"
              sawtooth.cluster.name: "sawtooth"

          - type: test-case
            name: "Test Assertions"

            brooklyn.config:
              targetResolutionTimeout: 10s
              timeout: 30m
              targetId: hyperledger-sawtooth-cluster
              serverNodeId: sawtooth-server-node

            brooklyn.children:
              - type: test-case
                name: "1. Cluster up and running"
                brooklyn.children:
                  - type: assert-up-and-running-initial

              - type: test-main
                name: "2. Main URI OK"

              - type: test-grafana
                name: "3. Grafana URI OK"

              - type: assert-validator-keys
                name: "4. Check validator keys have values"
                target: $brooklyn:component("sawtooth-server-node").descendant("sawtooth-validator")

              - type: test-network
                name: "5. Sawtooth.name contains value of sawtooth.network"
